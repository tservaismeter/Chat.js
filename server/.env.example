# Environment mode
NODE_ENV=development

# HTTP port for MCP server
PORT=8000

# Public base URL for hosted assets (no trailing slash)
# PUBLIC_ORIGIN=https://mcp.meterplan.com

# Supabase (required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# Light API
LIGHT_API_URL=https://api.light.dev
LIGHT_API_KEY=your-light-api-key

# Production safety overrides
# Set to true only if you intentionally want to run without LIGHT_API_KEY.
ALLOW_LIGHT_API_FALLBACK=false

# Set to true only for temporary troubleshooting.
SKIP_STARTUP_CHECKS=false
